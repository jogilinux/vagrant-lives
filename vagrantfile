# -*- mode: ruby -*-
# vi: set ft=ruby :
vms = {
'gandalf' => {'memory' => '512', 'cpus' => '1', 'ip' => '10', 'box' => 'debian/bookworm64',},
'bilbo' => {'memory' => '512', 'cpus' => '1', 'ip' => '11', 'box' => 'debian/bookworm64',}
'frodo' => {'memory' => '512', 'cpus' => '1', 'ip' => '12', 'box' => 'debian/bookworm64',}
}

Vagrant.configure('2') do |config|
  vms.each do |name, conf|
     config.vm.define "#{name}" do |my|
       my.vm.box = conf['box']
       my.vm.hostname = "#{name}.example.com"
       my.vm.network 'private_network', ip: "172.27.11.#{conf['ip']}"
       my.vm.provision 'shell', path: "Provision/#{conf['provision']}"
       my.vm.provider 'virtualbox' do |vb|
          vb.memory = conf['memory']
          vb.cpus = conf['cpus']
       end
     end
  end
end
